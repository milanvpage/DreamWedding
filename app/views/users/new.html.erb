<h1>Sign Up</h1>
<%= render partial: "layouts/error", locals: { object: @user } %>

<h2>
<%= form_for(@user, url: signup_path) do |f| %>
    <%= f.label :business_name %>
    <%= f.text_field :business_name %>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email, required:true %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    

    <%= f.submit "Sign Up" %>

<% end %>
</h2>