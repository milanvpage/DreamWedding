<%= form_for @comment do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :content %>
    <%= f.text_area :content %><br>

    <h3>Select an Already Existing Wedding:</h3>
    <%= f.collection_select :wedding_id, Wedding.all, :id, :title %><br>

    <%= f.submit "Add Comment" %>
<% end %>
